<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e7e7"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.acitivity.SetAddressActivity"
    tools:showIn="@layout/activity_set_address">
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"
        android:background="@drawable/click_selector">

        <TextView
            android:id="@+id/tv_mylocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/ic_my_location_black_24dp"
            android:text="点击定位当前位置"
            android:textSize="18dp" />
    </RelativeLayout>

    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textSize="16dp"
        android:text="我的收货地址"
        android:drawableLeft="@drawable/ic_location_city_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"/>-->


    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textSize="16dp"
        android:text="附近地址"
        android:drawableLeft="@drawable/ic_room_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"/>-->

</LinearLayout>
