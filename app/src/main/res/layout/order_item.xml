<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_marginBottom="8dp"
    android:elevation="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_shopname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="6dp"
        android:text="我的天空"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_evaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="6dp"
        android:text="待评价"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_space"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_shopname"
        android:background="#CCCCCC" />

    <ImageView
        android:id="@+id/iv_shopcover"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_below="@id/tv_space"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:background="#999999" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_shopcover"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/iv_shopcover"
        android:text="￥18"
        android:textColor="#ff0000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_ordertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_price"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/iv_shopcover"
        android:text="今天 16:00" />

    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_shopcover"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/iv_shopcover"
        android:text="由商家提供配送" />

    <TextView
        android:id="@+id/tv_space1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/iv_shopcover"
        android:layout_marginTop="10dp"
        android:background="#CCCCCC" />

    <Button
        android:id="@+id/btn_evaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_space1"
        android:layout_margin="6dp"
        android:text="去评价" />

    <Button
        android:layout_marginTop="6dp"
        android:layout_below="@id/tv_space1"
        android:layout_toLeftOf="@id/btn_evaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="再来一单" />


</RelativeLayout>
