<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cjt.shopping.AddressManageActivity"
    tools:showIn="@layout/activity_address_manage">
    <TextView
        android:gravity="center"
        android:textSize="18sp"
        android:text="新增收货地址"
        android:id="@+id/tv_addaddress"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <android.support.v7.widget.RecyclerView
        android:background="@color/press_true"
        android:id="@+id/rv_addresslist"
        android:layout_above="@id/tv_addaddress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
