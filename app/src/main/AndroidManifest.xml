<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cjt.shopping">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SetAddressActivity"
            android:label="@string/title_activity_set_address"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserInfoActivity"
            android:label="@string/title_activity_user_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShopDetailActivity"
            android:label="@string/title_activity_shop_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddressManageActivity"
            android:label="@string/title_activity_address_manage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddressEditActivity"
            android:label="@string/title_activity_address_edit"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>